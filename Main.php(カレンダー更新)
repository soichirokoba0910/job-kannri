<?php
  date_default_timezone_set('Asia/Tokyo');
  if(isset($_GET['ym'])){
    $ym = $_GET['ym'];
  }else{
    $ym =date('Y-m');
  }

  $timestamp = strtotime($ym.'-01');
  if($timestamp === false){
    $ym = date('Y-m');
    $timestamp = strotime($ym.'-01');
  }

  $today =date('Y-m-j');
  
  $html_title = date('Y月n月',$timestamp);

  $prev =date('Y-m',mktime(0,0,0,date('m',$timestamp)-1,1,date('Y',$timestamp)));
  $next =date('Y-m',mktime(0,0,0,date('m',$timestamp)+1,1,date('Y',$timestamp)));

  $day_count = date('t',$timestamp);

  $youbi = date('w',mktime(0,0,0,date('m',$timestamp),1,date('Y',$timestamp)));

  $weeks = [];
  $week ='';

  $week .= str_repeat('<td></td>', $youbi);
  for($day =1; $day<=$day_count;$day++,$youbi++){
   $date = $ym.'-'.$day;
   if($today == $date){
     $week .='<td class="today">' . $day;
   } else {
     $week .='<td>' .$day;
   } 
     $week .='</td>';

     if($youbi%7==6 || $day == $day_count){
       if($day == $day_count){
         $week .=str_repeat('<td></td>',6-($youbi%7));
       }

       $weeks[] ='<tr>'.$week.'</tr>';
       $week ='';
     }
  }
?>

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8">
    <title>カレンダー仕事管理表トップ</title>
    <style>
      .container{
        font-family: 'Noto Sans JP',sans-serif;
        margin-top: 80px;
      }
      h3{
        margin-bottom: 30px;
        text-align: center;
      }
      th{
        height: 30px;
      }
      .table-bordered td{
        height: 100px;
        width: 100px;
        vertical-align: top;
      }
      .today{
        background-color: orange;
      }
      .table-bordered th:nth-of-type(1),.table-bordered td:nth-of-type(1){
        color: red;
      }
      .table-bordered th:nth-of-type(7),.table-bordered td:nth-of-type(7){
        color: blue;
      }
      table{
        border-collapse: collapse;
        width: 700px;
        margin-left: auto;
        margin-right: auto;
        margin-top:10px;
        margin-bottom:10px;
      }
      .syuu td{
        height: 30px;
        text-align: center;
      }
      p{
        text-align: center;
      }
    </style>
  </head>
  <body>
    <div class ="container">
      <h3><a href="?ym=<?php echo $prev; ?>">&lt;</a><?php echo $html_title; ?><a href="?ym=<?php echo $next; ?>">&gt;</a></h3>
     <p> <a href="new.html">新規登録</a></p>
     <table border ="1">
       <tr><th>日にち</th><th>時間</th><th>タイトル</th><th>場所</th><th>内容</th><th>重要度</th><th>削除</th></tr>
       <?php
       $user ='jobtest1';
       $pass ='sakiyama0910';

       try{
        $dbh = new PDO('mysql:host=localhost;dbname=db1;charset=utf8', $user,$pass);
        $dbh->setAttribute(PDO::ATTR_EMULATE_PREPARES,false);
        $dbh->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);

         } catch(PDOException $e){
           echo '接続エラー' . $e->getMessage();
         }
         $sql = "SELECT * FROM job";
         $stmt = $dbh->query($sql);
         foreach($stmt as $row){
           echo '<tr>';
           echo '<td>'.$row['month'].'月'.$row['day'].'日</td>';
           echo '<td>'.$row['hour_start'].'時'.$row['minute_start'].'分～'.$row['hour_end'].'時'.$row['minute_end'].'分</td>';
           echo '<td>'.$row['title'].'</td>';
           echo '<td>'.$row['place'].'</td>';
           echo '<td>'.$row['content'].'</td>';
           echo '<td>'.$row['importance'].'</td>';
           echo '<td><a href ="delete.php?id='.$row['id'].'">削除</a></td>';  
           echo '</tr>';
         }
       ?>
     </table>
      <table  border="1"  class="table-bordered">
        <tr class="syuu">
          <td>日</td>
          <td>月</td>
          <td>火</td>
          <td>水</td>
          <td>木</td>
          <td>金</td>
          <td>土</td>
        </tr>
        <?php
          foreach($weeks as $week){
            echo $week;
          }
        ?>
      </table>
